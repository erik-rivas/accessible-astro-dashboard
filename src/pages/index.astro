---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import DashboardWidget from "../components/DashboardWidget.astro";
import Card from "../components/Card.astro";
---

<DefaultLayout title="Dashboard">
  <section>
    <h1>Welcome Yet another PokemonApp 🧑‍🚀</h1><br />
    <p class="size-20">This content will be generated using ChatGPT</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <div class="grid small-grid-1 medium-grid-2 large-grid-3 equal-height">
        <Card href="/pokemon/" title="Pokemon" body="What is Pokemon." />
        <Card
          href="/pokemon/history/"
          title="History"
          body="The main idea behind Pokémon ."
        />
        <Card
          href="/pokemon/characters/"
          title="Characters"
          body="Every pokemon char."
        />
        <Card
          href="/pokemon/community/"
          title="Community"
          body="Links to community sites. ❤️"
        />
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  const date = new Date();
  document.querySelector(
    "#current-time"
  ).innerHTML = `<em>${date.toDateString()}</em>`;
</script>
